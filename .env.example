# ===========================================
# JMarkets Environment Variables
# ===========================================

# Database
NEW_DATABASE_URL=postgresql://user:password@host:5432/jmarkets

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS Infrastructure (for multi-tenant)
ROUTE53_HOSTED_ZONE_ID=Z1234567890
BASE_DOMAIN=jmarkets.jcampos.dev
WILDCARD_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789:certificate/abc-123

# S3 Configuration
S3_BUCKET_NAME=jmarkets-assets
S3_REGION=us-east-1

# Cognito (Authentication)
COGNITO_USER_POOL_ID=us-east-1_xxxxx
COGNITO_CLIENT_ID=your-client-id
COGNITO_CLIENT_SECRET=your-client-secret

# Email (SES)
FROM_EMAIL=noreply@jmarkets.jcampos.dev
SES_REGION=us-east-1

# Frontend URLs
FRONTEND_URL=https://jmarkets.jcampos.dev
VITE_API_URL=https://api.jmarkets.jcampos.dev

# Server Configuration
NODE_ENV=development
PORT=5000

# Session Secret (for local development)
SESSION_SECRET=your-session-secret-change-in-production

# Encryption (for sensitive data)
ENCRYPTION_KEY=32-character-encryption-key-here

# Feature Flags
ENABLE_MULTI_TENANT=true
ENABLE_CUSTOM_DOMAINS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

