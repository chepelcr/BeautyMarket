# Cognito Stack Outputs
COGNITO_USER_POOL_ARN=arn:aws:cognito-idp:us-east-1:123456789:userpool/us-east-1_xxxxx
COGNITO_IDENTITY_POOL_ID=us-east-1:12345678-1234-1234-1234-123456789012

# Lambda Stack Outputs
LAMBDA_FUNCTION_NAME=jmarkets-api-handler
LAMBDA_FUNCTION_ARN=arn:aws:lambda:us-east-1:123456789:function:jmarkets-api-handler

# API Gateway Stack Outputs
API_GATEWAY_ID=abcdef1234
API_GATEWAY_URL=https://abcdef1234.execute-api.us-east-1.amazonaws.com/dev
API_DOMAIN_NAME=https://api.jmarkets.jcampos.dev

# Static Website Stack Outputs
CLIENT_BUCKET_NAME=jmarkets-website-dev-123456789
CLIENT_CLOUDFRONT_ID=E1234ABCD
CLIENT_CLOUDFRONT_URL=https://www.jmarkets.jcampos.dev

# Pipeline Stack Outputs
CODEPIPELINE_NAME=jmarkets-pipeline
CODEBUILD_PROJECT_NAME=jmarkets-build
GITHUB_CONNECTION_ARN=arn:aws:codestar-connections:us-east-1:123456789:connection/12345678-1234-1234-1234-123456789012

# Infrastructure Configuration
PIPELINE_ROLES_STACK_NAME=jmarkets-pipeline-roles
AWS_ACCOUNT_ID=123456789
AWS_CLOUDFRONT_URL=https://d1234.cloudfront.net

# SES SMTP (Email sending)
SES_SMTP_USERNAME=your-ses-smtp-username
SES_SMTP_PASSWORD=your-ses-smtp-password

